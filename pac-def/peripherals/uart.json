{
    "$schema": "../../../RustPACGen/peripheral-schema.json",
    "name": "UART",
    "base_address": "0xE0001000",
    "registers": [
        {
            "name": "CONTROL",
            "access": "read-write",
            "description": "UART control register",
            "offset": "0x0",
            "size": 32,
            "fields": [
                {
                    "name": "sw_rx_rst",
                    "description": "Software reset for Rx data path",
                    "bit_range": "0"
                },
                {
                    "name": "sw_tx_rst",
                    "description": "Software reset for Tx data path",
                    "bit_range": "1"
                },
                {
                    "name": "rx_en",
                    "description": "Receive enable",
                    "bit_range": "2"
                },
                {
                    "name": "rx_dis",
                    "default_value": 1,
                    "description": "Receive disable",
                    "bit_range": "3"
                },
                {
                    "name": "tx_en",
                    "description": "Transmit enable",
                    "bit_range": "4"
                },
                {
                    "name": "tx_dis",
                    "description": "Transmit disable",
                    "bit_range": "5"
                },
                {
                    "name": "rst_toc",
                    "description": "Reset timeout counter",
                    "bit_range": "6"
                },
                {
                    "name": "start_tx_break",
                    "description": "Start transmitter break",
                    "bit_range": "7"
                },
                {
                    "name": "stop_tx_break",
                    "description": "Stop transmitter break",
                    "bit_range": "8",
                    "default_value": 1
                }
            ]
        },
        {
            "name": "MODE",
            "access": "read-write",
            "description": "UART mode register",
            "offset": "0x4",
            "size": 32,
            "fields": [
                {
                    "name": "clk_sel",
                    "description": "Clock select",
                    "bit_range": "0"
                },
                {
                    "name": "char_len",
                    "description": "Character Length",
                    "bit_range": "[2:1]",
                    "enums": {
                        "name": "CharacterLength",
                        "values": [
                            {
                                "name": "EightBits",
                                "description": "8 bits",
                                "value": "0b00",
                                "is_default": true
                            },
                            {
                                "name": "SevenBits",
                                "description": "7 bits",
                                "value": "0b10"
                            },
                            {
                                "name": "SixBits",
                                "description": "6 bits",
                                "value": "0b11"
                            }
                        ]
                    }
                },
                {
                    "name": "parity",
                    "description": "Parity type select",
                    "bit_range": "[5:3]",
                    "enums": {
                        "name": "ParityType",
                        "values": [
                            {
                                "name": "Even",
                                "description": "Even parity",
                                "value": "0b000",
                                "is_default": true
                            },
                            {
                                "name": "Odd",
                                "description": "Odd parity",
                                "value": "0b001"
                            },
                            {
                                "name": "Space",
                                "description": "Space parity",
                                "value": "0b010"
                            },
                            {
                                "name": "Mark",
                                "description": "Mark parity",
                                "value": "0b011"
                            },
                            {
                                "name": "None",
                                "description": "No parity",
                                "value": "0b100"
                            }
                        ]
                    }
                },
                {
                    "name": "num_stop_bits",
                    "description": "Number of stop bits",
                    "bit_range": "[7:6]",
                    "enums": {
                        "name": "StopBits",
                        "values": [
                            {
                                "name": "One",
                                "description": "1 stop bit",
                                "value": "0b00",
                                "is_default": true
                            },
                            {
                                "name": "OneAndHalf",
                                "description": "1.5 stop bits",
                                "value": "0b01"
                            },
                            {
                                "name": "Two",
                                "description": "2 stop bits",
                                "value": "0b10"
                            }
                        ]
                    }
                },
                {
                    "name": "channel_mode",
                    "description": "Channel mode select",
                    "bit_range": "[9:8]",
                    "enums": {
                        "name": "ChannelMode",
                        "values": [
                            {
                                "name": "Normal",
                                "description": "Normal mode",
                                "value": "0b00",
                                "is_default": true
                            },
                            {
                                "name": "AutoEcho",
                                "description": "Automatic echo",
                                "value": "0b01"
                            },
                            {
                                "name": "LocalLoop",
                                "description": "Local loopback",
                                "value": "0b10"
                            },
                            {
                                "name": "RemoteLoop",
                                "description": "Remote loopback",
                                "value": "0b11"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "IER",
            "access": "read-write",
            "description": "UART interrupt enable register",
            "offset": "0x8",
            "size": 32
        },
        {
            "name": "IDR",
            "access": "read-write",
            "description": "UART interrupt disable register",
            "offset": "0xC",
            "size": 32
        },
        {
            "name": "IMR",
            "access": "read-only",
            "description": "UART interrupt mask register",
            "offset": "0x10",
            "size": 32
        },
        {
            "name": "ISR",
            "access": "read-only",
            "description": "UART channel interrupt status register",
            "offset": "0x14",
            "size": 32
        },
        {
            "name": "BAUD_GEN",
            "access": "read-write",
            "description": "Baud rate generator register",
            "offset": "0x18",
            "size": 32,
            "reset_value": "0x28B",
            "fields": [
                {
                    "name": "cd",
                    "description": "Baud rate clock divisor value",
                    "access": "read-write",
                    "bit_range": "[15:0]"
                }
            ]
        },
        {
            "name": "RXTOUT",
            "access": "read-write",
            "description": "Receiver timeout register",
            "offset": "0x1C",
            "size": 32
        },
        {
            "name": "RXWM",
            "access": "read-write",
            "description": "Receiver FIFO trigger level register",
            "offset": "0x20",
            "size": 32
        },
        {
            "name": "MODEMCR",
            "access": "read-write",
            "description": "Modem control register",
            "offset": "0x24",
            "size": 32
        },
        {
            "name": "MODEMSR",
            "access": "read-write",
            "description": "Modem status register",
            "offset": "0x28",
            "size": 32
        },
        {
            "name": "SR",
            "access": "read-only",
            "description": "Channel status register",
            "offset": "0x2C",
            "size": 32,
            "fields": [
                {
                    "name": "rx_fifo_trigger",
                    "description": "Receiver FIFO trigger status",
                    "bit_range": "0",
                    "access": "read-only"
                },
                {
                    "name": "rx_fifo_empty",
                    "description": "Receiver FIFO empty status",
                    "bit_range": "1",
                    "access": "read-only"
                },
                {
                    "name": "rx_fifo_full",
                    "description": "Receiver FIFO full status",
                    "bit_range": "2",
                    "access": "read-only"
                },
                {
                    "name": "tx_fifo_empty",
                    "description": "Transmitter FIFO empty status",
                    "bit_range": "3",
                    "access": "read-only"
                },
                {
                    "name": "tx_fifo_full",
                    "description": "Transmitter FIFO full status",
                    "bit_range": "4",
                    "access": "read-only"
                }
            ]
        },
        {
            "name": "FIFO",
            "access": "read-write",
            "description": "Transmit and receive FIFO",
            "offset": "0x30",
            "size": 32,
            "fields": [
                {
                    "name": "fifo",
                    "access": "read-write",
                    "bit_range": "[7:0]",
                    "description": "Operates as Tx FIFO and Rx FIFO"
                }
            ]
        },
        {
            "name": "BAUD_DIV",
            "access": "read-write",
            "description": "Baud rate divider register",
            "offset": "0x34",
            "size": 32,
            "fields": [
                {
                    "name": "bdiv",
                    "description": "Baud rate divider value",
                    "access": "read-write",
                    "bit_range": "[7:0]"
                }
            ]
        }
    ]
}